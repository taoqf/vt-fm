<Window x:Class="AutoUpdate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="自动更新" Height="180" Width="525" Name="updateWindow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Name="tBlockProcess"></TextBlock>
        <ProgressBar Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Name="proBarTotal"></ProgressBar>
        <TextBlock Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Left" Name="tBlockNow" Text="正在下载:"/>
        <ProgressBar Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Left" Name="proBarNow"></ProgressBar>
    </Grid>
</Window>
