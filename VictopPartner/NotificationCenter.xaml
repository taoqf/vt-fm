<Window x:Class="VictopPartner.NotificationCenter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:Victop.Wpf.Controls;assembly=Victop.Wpf.Controls"
        Title="通知消息中心" Height="220" Width="500" Topmost="True" WindowStyle="None" ShowInTaskbar="False" ResizeMode="NoResize">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Border Background="AliceBlue" Grid.Row="0" MouseLeftButtonDown="UIElement_OnMouseLeftButtonDown">
            <Grid>
                <Label>实时告警列表</Label>
                <control:VicButtonNormal Click="ButtonBase_OnClick" HorizontalAlignment="Right" Height="30" Width="50" Content="关闭"/>
            </Grid>
        </Border>
    </Grid>
</Window>
