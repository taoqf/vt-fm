                                    <ControlTemplate.Triggers>
                                        <Trigger  Property="IsMouseOver" Value="true">
                                            <Setter Property="Cursor" Value="Hand"/>
                                        </Trigger>
                                        <Trigger  Property="IsSelected" Value="true">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="BorderBrush" TargetName="Bd"  Value="Yellow"/>
                                            <Setter Property="Opacity" TargetName="borderSelect"  Value="1"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBox}">
                        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Background="{TemplateBinding Background}">
                            <WrapPanel Orientation="Horizontal" IsItemsHost="True" ScrollViewer.CanContentScroll="True"/>
                        </ScrollViewer>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
       
    </UserControl.Resources>
    <Grid>
        <AdornerDecorator>
            <Canvas x:Name="bigPanel" Background="{DynamicResource WhiteShade}">
                <Thumb Name="thumb"  Foreground="{x:Null}" ClipToBounds="False"  Width="906" Canvas.Left="10" Canvas.Top="10" Background="BlanchedAlmond"  RenderTransformOrigin="1.196,1.734" Visibility="Collapsed" Height="21"/>
                <Canvas.ContextMenu>
                    <controls:VicContextMenu>
                        <controls:VicMenuItemNormal Header="新建区域">
                            <controls:VicMenuItemNormal x:Name="addBtnArea" Header="按钮区域" Command="{Binding btnAddAreaClickCommand}"></controls:VicMenuItemNormal>
                            <controls:VicMenuItemNormal Header="图片区域" IsEnabled="False"/>
                            <controls:VicMenuItemNormal Header="列表区域" IsEnabled="False"/>
                            <controls:VicMenuItemNormal Header="综合区域" IsEnabled="False"/>
                        </controls:VicMenuItemNormal>
                        <controls:VicMenuItemNormal Header="显示天气"/>
                        <controls:VicMenuItemNormal Header="显示日历"/>
                        <controls:VicMenuItemNormal Header="显示通知"/>
                        <controls:VicMenuItemNormal Header="显示常用网址"/>
                    </controls:VicContextMenu>
                </Canvas.ContextMenu>
            </Canvas>
        </AdornerDecorator>
        <controls:VicPopup x:Name="AddApply"   Margin="0,10,0,0"   StaysOpen="True" Placement="Center" IsOpen="{Binding PopupIsShow,UpdateSourceTrigger=PropertyChanged}">
            <Border BorderBrush="WhiteSmoke"  Width="600" Height="500"  Background="WhiteSmoke" >
                <controls:VicGridNormal>
                    <controls:VicGridNormal.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="30"/>
                    </controls:VicGridNormal.RowDefinitions>
                    <controls:VicGridNormal.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </controls:VicGridNormal.ColumnDefinitions>
                    <StackPanel Background="#009600">
                       <Label   Foreground="White" Height="80" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Bold" FontSize="18"  Content="添加应用"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                        <controls:VicTextBoxSeach x:Name="txtSearch"  VerticalAlignment="Center" VerticalContentAlignment="Center" BorderBrush="{DynamicResource SkinColor}" MaxLength="20" WaterMark=" Search"  BorderThickness="0,0,0,1" Width="150">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="VicTextBoxSeachClick">
                                    <i:InvokeCommandAction Command="{Binding VicTextBoxSeachClickCommand}"  CommandParameter="{Binding ElementName=txtSearch}"/>
                                </i:EventTrigger>
                                <i:EventTrigger EventName="VicTextBoxClearClick">
                                    <i:InvokeCommandAction Command="{Binding VicTextBoxClearClickCommand}"  CommandParameter="{Binding ElementName=txtSearch}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </controls:VicTextBoxSeach>
                        <controls:VicButtonNormal Name="btnPopupClose" Style="{DynamicResource btnCloseMetroStyle}" VerticalAlignment="Top" Command="{Binding btnAddApplyCloseClickCommand}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="0" Grid.Row="1" Background="DimGray"   CanVerticallyScroll="True" >
                        <TreeView Name="treeviewView" BorderThickness="0" Background="DimGray"  ItemsSource="{Binding NewMenuListLocal}" FocusVisualStyle="{x:Null}">
                            <ItemsControl.ItemTemplate>
                                    <HierarchicalDataTemplate HierarchicalDataTemplate.ItemsSource="{Binding SystemMenuList}">
                                         <TextBlock VerticalAlignment="Center"  Foreground="White" Margin="8" Text="{Binding MenuName}"/>
                                    </HierarchicalDataTemplate>
                                </ItemsControl.ItemTemplate>
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="SelectedItemChanged">
                                        <i:InvokeCommandAction Command="{Binding treeviewViewSelectedItemChangedCommand}" CommandParameter="{Binding ElementName=treeviewView,Path=SelectedItem}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TreeView>
                        </StackPanel>
                    <ListBox Name="listBoxPopupMenuList" Grid.Row="1" Grid.Column="1"  Background="GhostWhite" Style="{StaticResource PopupMenuListStyle}" ItemsSource="{Binding NewSystemFourthLevelMenuList,UpdateSourceTrigger=PropertyChanged}"/>
                   
                    <!--主界面第三行-->
                    <controls:VicStackPanelNormal Grid.Row="0"  Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                        <!--确认按钮-->
                        <controls:VicButtonNormal x:Name="btnAllSelect"  Content="全部选中" Width="75" Margin="2.5,5" Height="30" Command="{Binding btnAllSelectClickCommand}" CommandParameter="{Binding ElementName=btnAllSelect}"/>
                        
                        <!--确认按钮-->
                        <controls:VicButtonNormal x:Name="btnIssueAffirm"  Content="确定" Width="75" Margin="2.5,5" Height="30" Command="{Binding btnAffirmClickCommand}"/>
                        <!--取消按钮-->
                        <controls:VicButtonNormal x:Name="btnIssueCancel" Content="取消" Width="75" Margin="2.5,5" Height="30" Command="{Binding btnAddApplyCloseClickCommand}"/>
                    </controls:VicStackPanelNormal>
                    <StatusBar Grid.Row="2" Grid.ColumnSpan="2"  Background="Black"></StatusBar>
                </controls:VicGridNormal>
            </Border>
        </controls:VicPopup>
    </Grid>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding PersonAreaLoadedCommand}"  CommandParameter="{Binding ElementName=mainArea}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

</UserControl>
