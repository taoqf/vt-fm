                                            </Grid.RowDefinitions>
                                            <controls:VicButtonNormal x:Name="btnClose"  BorderThickness="0" Background="Transparent"   Command="{Binding DataContext.BtnDelPluginCommand,RelativeSource={RelativeSource AncestorType=Window}}" 
                                                CommandParameter="{Binding ElementName=btnClose}" HorizontalAlignment="Right"  VerticalAlignment="Top" Height="15" Width="15" FocusVisualStyle="{x:Null}" ToolTip="删除">
