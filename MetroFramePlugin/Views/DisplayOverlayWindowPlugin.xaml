<Window x:Class="MetroFramePlugin.Views.DisplayOverlayWindowPlugin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:controls="http://schemas.ifeidao.com/wpfcontrol"
        xmlns:vm="clr-namespace:MetroFramePlugin.ViewModels"
        Title="DisplayOverlayWindowPlugin" Name="DisplayOverlayWindow" Height="350" Width="800" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:DisplayOverlayWindowPluginViewModel/>
    </Window.DataContext>
    
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding displayOverlayWindowPluginCommand}" CommandParameter="{Binding ElementName=DisplayOverlayWindow}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid Name="grid">
        <!--<ListBox Grid.Row="1" Name="listBoxOverPlugin" SelectedIndex="0" Style="{DynamicResource OverlayPluginListStyle}" ItemsSource="{Binding SystemFourthLevelMenuList,UpdateSourceTrigger=PropertyChanged}"/>-->
    </Grid>
</Window>
