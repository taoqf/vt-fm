        <Button Content="&#xe622;" Style="{DynamicResource btnNextPageStyle}" Command="{Binding btnNextPageClickCommand}" Background="Transparent" Margin="68,283,744,65"></Button>
    </Grid>
</controls:VicWindowNormal>
