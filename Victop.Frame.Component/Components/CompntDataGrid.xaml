<UserControl x:Class="Victop.Frame.Component.CompntDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cpt="clr-namespace:Victop.Frame.Component"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>     
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Left">
            <Button Width="100" Height="24" Content="查询" Margin="0,0,5,0" Name="btnSearch" Click="btnSearch_Click"/>
            <Button Width="100" Height="24" Content="保存" Margin="0,0,5,0" Name="btnSave" Click="btnSave_Click"/>
        </DockPanel>
        <cpt:UnitDataGrid x:Name="firstplugin" Grid.Row="1" Grid.Column="0"/>
        <GroupBox Header="选定记录信息" Grid.Row="1" Grid.Column="1">
            <!--<cpt:UnitRowDataPanel x:Name="secondplugin"/>-->
            <cpt:UnitDataGrid x:Name="secondplugin"/>
        </GroupBox>
    </Grid>
</UserControl>
