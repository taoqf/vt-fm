        xmlns:views="clr-namespace:MetroUserLoginPlugin.Views"
        xmlns:helpers="clr-namespace:MetroUserLoginPlugin.Helpers"
        Name="winUserLogin"
        WindowStyle="None" Background="DodgerBlue"  Width="800" Height="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.Resources>
    </Window.Resources>
    <Grid x:Name="gridRoot" Width="600" Height="400" HorizontalAlignment="Center" VerticalAlignment="Center">
        <!--<Image Source="\userLogin.jpg"/>-->
        <Grid.DataContext>
            <vm:UserLoginViewModel/>
        </Grid.DataContext>
        <views:UCUserLogin x:Name="FrontGD"/>
