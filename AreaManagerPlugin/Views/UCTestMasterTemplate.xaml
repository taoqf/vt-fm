<UserControl x:Class="AreaManagerPlugin.Views.UCTestMasterTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              
             xmlns:ToolBarTemplates="clr-namespace:Victop.Frame.Templates.ToolBarTemplates;assembly=Victop.Frame.Templates" 
             xmlns:DataGridTemplates="clr-namespace:Victop.Frame.Templates.DataGridTemplates;assembly=Victop.Frame.Templates"                          
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ToolBarTemplates:UCSearchToolBarT Name="searchToolBar" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="0"  btnAddClick="UCSearchToolBarT_btnAddClick" btnDeleteClick="UCSearchToolBarT_btnDeleteClick" btnCancelClick="UCSearchToolBarT_btnCancelClick" btnSaveClick="UCSearchToolBarT_btnSaveClick"/>

        <DataGridTemplates:UCMasterDataGridT Name="dgrid" Grid.Row="1"/>

    </Grid>
</UserControl>
