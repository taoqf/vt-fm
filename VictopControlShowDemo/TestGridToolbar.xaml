<Window x:Class="VictopControlShowDemo.TestGridToolbar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Victop.Wpf.Controls;assembly=Victop.Wpf.Controls"
        Title="TestGridToolbar" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <controls:VicGridToolBar>
            <controls:VicStackPanelNormal Orientation="Horizontal">
                <controls:VicButtonTopBottom Style="{DynamicResource btnAdd}"></controls:VicButtonTopBottom>
            </controls:VicStackPanelNormal>
        </controls:VicGridToolBar>
    </Grid>
</Window>
